@model movie_rental_app.Models.Movie

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<div class="row">
    <div class="col-sm-2">
        <img class="img-fluid" src="@Model.Image" />
    </div>
    <div class="col-sm-10">
        <div class="card">
            <div class="card-header">@Model.Name <span class="badge badge-primary">@Model.Quantity Left</span></div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">@Model.Genre</li>
                <li class="list-group-item">@String.Format("{0:yyyy, MMMM}", Model.ReleaseDate).ToUpper()</li>
            </ul>
        </div>
        <button class="btn btn-danger mt-4">
            @Html.ActionLink("Back to Movies", "Index", new object { }, new { @class = "text-white" })
        </button>
    </div>
</div>