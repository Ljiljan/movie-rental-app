@model movie_rental_app.ViewModels.RandomMovieVM

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    // Class name which display if customers count from model is less than 1
    // if the value is null, the whole class attribute to html is going to be deleted
    var ourClass = Model.Customers.Count < 1 ? "bg-secondary p-3" : null;
}

<h2 class="@ourClass">Random</h2>

<div class="row">
    <div class="col-md-4">
        <h4>Movie title</h4>
       <ul class="list-group">
           <li class="list-group-item">
               @Model.Movie.Name
           </li>
       </ul>
    </div>
    <div class="col-md-8">
        <h4>Movie customers <small>(@Model.Movie.Name)</small></h4>
        @if (Model.Customers.Count == 0)
        {
            <text>Customers did not rented this movie before</text>
        }

        else  {
            <ul class="list-group">
            @foreach (var customer in Model.Customers)
            {
               <li class="list-group-item">@customer.Name</li>
            }
            </ul>
        }
    </div>
</div>