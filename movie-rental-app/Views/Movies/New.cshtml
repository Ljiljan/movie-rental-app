@model movie_rental_app.ViewModels.MovieViewModel

@{
    if (!Model.WebsiteTitle.IsEmpty())
    {
        ViewBag.Title = Model.WebsiteTitle;
    }
    else
    {
        ViewBag.Title = "Add new customer";
    }

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="bg-primary p-3 text-white mb-4">@ViewBag.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
     <div class="row">
         <div class="col-sm-6">
             <div class="form-group">
                 @Html.LabelFor(m => m.Movies.Name)
                 @Html.TextBoxFor(mod => mod.Movies.Name, new { @class = "form-control" })
             </div>

             <div class="form-group">
                 @Html.LabelFor(m => m.Movies.Genre)
                 @Html.DropDownListFor(m => m.Movies.Genre, new SelectList(Model.Genres), new { @class = "form-control" })
             </div>

             <div class="form-group">
                 @Html.LabelFor(m => m.Movies.Image)
                 @Html.TextBoxFor(m => m.Movies.Image, new { @class = "form-control" })
             </div>
         </div>
         <div class="col-sm-6">
             <div class="form-group">
                 @Html.LabelFor(m => m.Movies.ReleaseDate)
                 @Html.TextBoxFor(m => m.Movies.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
             </div>
             <div class="form-group">
                 @Html.LabelFor(m => m.Movies.Quantity)
                 @Html.TextBoxFor(m => m.Movies.Quantity, new { @class = "form-control" })
             </div>
             @Html.HiddenFor(m => m.Movies.Id)
             <button type="submit" class="btn btn-primary">
                 Save Movie
             </button>
         </div>
    </div>
}
