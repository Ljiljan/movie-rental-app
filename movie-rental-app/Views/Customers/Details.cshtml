@model movie_rental_app.ViewModels.RandomMovieVM

@{
    ViewBag.Title = "Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var userId = Convert.ToInt32(ViewContext.RouteData.Values["id"]);
}

<h2>Details</h2>

@if (userId < Model.Customers.Count || userId <= 0)
{
    <ul class="list-group">
        @for (int i = 0; i < Model.Customers.Count; i++)
        {
            if (@Model.Customers[i].Id == userId)
            {
            <li class="list-group-item">@Model.Customers[i].Name</li>
            }
        }
    </ul>
}
else
{
    <div class="alert alert-danger">
        The user with id @userId  does not exist!
    </div>
}