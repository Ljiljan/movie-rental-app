@model movie_rental_app.ViewModels.RandomMovieVM

@{
    ViewBag.Title = "Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var userId = Convert.ToInt32(ViewContext.RouteData.Values["id"]);
}

@if (userId <= Model.Customers.Count || Model.Customers.Count > 0)
{
        for (int i = 0; i < Model.Customers.Count; i++)
        {
            if (@Model.Customers[i].Id == userId)
            {
            <h2>@Model.Customers[i].Name</h2>
            <hr>
            }
        }
}
else
{
    <div class="alert alert-danger">
        The user with id @userId  does not exist!
    </div>
}